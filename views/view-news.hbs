<div>
    <div class="d-flex align-items-center">
        <div>
            <p class="h1">{{ news.title }}</p>
        </div>
        {{#if (usersEqual news.user user)}}
        <div class="m-2"><a href="/news/edit/{{news.id}}" class="btn btn-primary">Редактировать</a></div>
        <div class="m-2">
            <form method="POST" action='/news/delete/{{news.id}}' style="display: inline;">
                <button type='submit' class='btn btn-primary'>Удалить</button>
            </form>
        </div>
        {{/if}}
    </div>

    <p class="card-text"><img src='{{news.user.avatar}}' style="height: 16px; width: 16px;"
            class="rounded-circle m-1"><small class="text-muted">{{fullname
            news.user}}</small><span class="m-1 text-muted">&#183;</span><small class="text-muted">{{date
            news.createdAt}}</small>
    </p>
    <img src="{{ news.cover }}" alt="...">
    <p class="card-text">{{ news.description }}</p>
    <h5>Комментарии</h5>
    <form class="row g-2" method='POST' action='/news/{{news.id}}' id='form-{{news.id}}'>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="content" name="content" placeholder="Текст комментария...">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Отправить</button>
        </div>
    </form>

    {{>comments comments=news.comments user=user}}
</div>