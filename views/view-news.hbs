<div>
    <p class="h1">{{ news.title }}<a href="/news/{{news.id}}/edit" class="btn btn-primary">Редактировать</a></p>
    <p>Создано: {{ news.user.firstName }} {{ news.user.lastName }} {{ news.user.createdAt }}</p>
    <img src="{{ news.cover }}" alt="...">
    <div class="card-body">
        <p class="card-text">{{ news.description }}</p>
        <h5>Комментарии</h5>
        {{>comments news=news comments=news.comments users=users level=0}}
        <a href="#" style="text-decoration:none;"
            onclick="getElementById('form-{{news.id}}').style.display='block'">+</a>
        <form style='display: none;' method='POST' action='/news/{{news.id}}' id='form-{{news.id}}'>
            <div>Text: <input type="text" name="content" /></div>
            <select id="user" name="user">
                {{#each users}}
                <option>{{this.firstName}} {{this.lastName}}</option>
                {{/each}}
            </select>
            <div><input type="submit" /></div>
        </form>
    </div>
</div>