{{#if news}}
<div class="row">
    {{#each news}}
    <div class="col-lg-6">
        <a href='/news/{{this.id}}'>
            <div class="card">
                <img src='{{this.cover}}' class="card-img-top" style="height: 200px; object-fit: cover;" alt=''>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Автор: {{this.user.firstName}} {{this.user.lastName}}</h6>
                    {{#if this.createdAt }}<h6 class="card-subtitle mb-2 text-muted">Дата создания: {{this.createdAt}}
                    </h6>{{/if}}
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </a>
    </div>
    {{/each}}
</div>
{{else}}
<h2>Нет новостей</h2>
{{/if}}